@model IEnumerable<Lib.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row main-top-margin text-center">
    <div class="col-md-8 col-md-offset-2 ">
        <h1>Student management page</h1>
    </div>
</div>
<div class="row  main-low-margin text-center">
    <div class="">
        <p>
            <a class="sCreate btn btn-default" id="sCreate">
                @*href="@Url.Action("Create", "Books")"*@
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>Create New</span>
            </a>
        </p>
        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Major.MajorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Major.MajorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            <a href="javascript:void(0);" class="sEdit btn btn-success" id="sEdit" data-id="@item.StudentId">
                                <i class="glyphicon glyphicon-pencil"></i>
                                <span>Edit</span>
                            </a>
                        </td>
                        <td>
                            <a href="javascript:void(0);" class="sDetail btn btn-info" id="sDetail" data-id="@item.StudentId">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                <span>Details</span>
                            </a>
                        </td>
                        <td>
                            <a href="javascript:void(0);" class="sDelete btn btn-danger" id="sDelete" data-id="@item.StudentId">
                                <i class="glyphicon glyphicon-trash"></i>
                                <span>Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>

</div>